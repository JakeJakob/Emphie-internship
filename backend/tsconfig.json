{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "dist",
		"noImplicitAny": true,
		"sourceMap": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"baseUrl": "./src"
	},
	"include": ["src", "tests"],
	"exclude": [
		"node_modules",
		"eslint.config.mjs",
		"backend/jest.config.js",
		"tsup.config.ts"
	]
}
