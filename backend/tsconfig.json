{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,

		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"include": ["src/**/*.ts", ".env", "src/**/*.d.ts", "test/**/*.ts"],
	"exclude": ["node_modules"]
}
