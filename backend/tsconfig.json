{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"noImplicitAny": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"baseUrl": "./src"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
